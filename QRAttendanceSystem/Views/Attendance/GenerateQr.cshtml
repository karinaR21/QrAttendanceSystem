@model QRAttendanceSystem.Models.QrToken

<h2 class="text-center mb-4">Generate QR Code</h2>

@if (Model != null)
{
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg text-center p-4">
                <p class="text-muted mb-2">Scan this code to register attendance</p>

                <img class="rounded border shadow-sm my-3"
                     style="width:160px; height:160px;"
                     src="https://api.qrserver.com/v1/create-qr-code/?size=160x160&data=@Model.Token" />


                <span class="badge bg-warning text-dark">
                    Valid until @Model.ExpirationTime.ToString("HH:mm")
                </span>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-secondary text-center">
        No QR code generated yet.
    </div>
}
