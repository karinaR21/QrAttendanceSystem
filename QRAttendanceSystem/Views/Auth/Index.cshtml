@{
    ViewData["Title"] = "Authentication";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:90vh">
    <div class="glass p-4 p-md-5" style="max-width:420px; width:100%">

        <div class="text-center mb-4">
            <i class="bi bi-mortarboard fs-1 mb-2"></i>
            <h3 class="fw-bold">School Attendance</h3>
            <p class="text-white-50">QR Code-Based Attendance System</p>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Login"
               class="btn btn-outline-light w-100">
                Login
            </a>

            <a asp-action="Register"
               class="btn btn-outline-light w-100">
                Register
            </a>
        </div>

    </div>
</div>
